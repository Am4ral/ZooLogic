arvore indio somaFibonacci(indio n) {
    indio soma = 0;

    formiga (indio i = 0; i < n; i = i + 1) {
        soma = soma + fibonacci(i);
    }

    desmatamento soma;
}


arvore indio fibonacci(indio n) {
    cobra (n == 0 || n == 1) {
        desmatamento n;
    } 

    cauda {
        desmatamento fibonacci(n - 1) + fibonacci(n - 2);
    }
}


selva() {
    indio n = 1;

    lhama("Digite um numero ");
    porco(n);

    indio resultado = somaFibonacci(n);

    lhama("A soma dos " ++ n ++ " primeiros termos da sequencia de Fibonacci eh " ++ resultado);

    desmatamento 0;
}
