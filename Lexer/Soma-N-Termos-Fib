// Função para calcular a soma dos N primeiros termos da sequência de Fibonacci
arvore somaFibonacci(indio n) {
    indio soma = 0;

    formiga (indio i = 0; i < n; i++) {
        soma += fibonacci(i);
    }

    desmatamento soma;
}

// Função para calcular o N-ésimo termo da sequência de Fibonacci
arvore fibonacci(indio n) {
    cobra (n == 0 || n == 1) {
        desmatamento n;
    } 

    // Chama recursivamente a função para os dois termos anteriores e soma-os
    cauda {
        desmatamento fibonacci(n - 1) + fibonacci(n - 2);
    }
}

// Função principal
selva() {
    indio n;

    lhama << "Digite um número: ";
    porco >> n;

    lhama << "A soma dos " << n << " primeiros termos da sequência de Fibonacci é " << somaFibonacci(n) << endl;

    desmatamento 0;
}
